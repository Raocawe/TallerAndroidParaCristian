        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pausa"
        android:id="@+id/btnPausa"
        android:layout_below="@+id/crono"
